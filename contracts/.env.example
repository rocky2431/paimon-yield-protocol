# Paimon Yield Protocol - Smart Contracts Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# RPC Endpoints
# =============================================================================

# BSC Mainnet RPC URL (e.g., from QuickNode, Ankr, or public endpoint)
BSC_MAINNET_RPC_URL=https://bsc-dataseed.binance.org/

# BSC Testnet RPC URL
BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545/

# =============================================================================
# Deployment Keys (NEVER commit real private keys!)
# =============================================================================

# Deployer private key (for testing only - use hardware wallet in production)
DEPLOYER_PRIVATE_KEY=0x...

# =============================================================================
# API Keys
# =============================================================================

# BscScan API Key (for contract verification)
BSCSCAN_API_KEY=your_bscscan_api_key_here

# =============================================================================
# Protocol Configuration
# =============================================================================

# Gnosis Safe multisig address (3/5 threshold)
MULTISIG_ADDRESS=0x...

# Oracle addresses
APRO_ORACLE_ADDRESS=0x...
CHAINLINK_ORACLE_ADDRESS=0x...

# =============================================================================
# Testing
# =============================================================================

# Fork block number for mainnet testing
FORK_BLOCK_NUMBER=latest

# Enable gas reporting (true/false)
REPORT_GAS=true
