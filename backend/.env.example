# Paimon Yield Protocol Backend - Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# Server Configuration
# =============================================================================

PORT=3001
HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=info

# CORS (comma-separated origins)
CORS_ORIGIN=http://localhost:3000

# =============================================================================
# Database (PostgreSQL)
# =============================================================================

DATABASE_URL="postgresql://user:password@localhost:5432/paimon_yield?schema=public"

# =============================================================================
# Redis (for BullMQ)
# =============================================================================

REDIS_URL="redis://localhost:6379"

# =============================================================================
# Blockchain RPC
# =============================================================================

BSC_MAINNET_RPC_URL=https://bsc-dataseed.binance.org
BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545

# =============================================================================
# Contract Addresses (Updated after deployment)
# =============================================================================

PNGY_VAULT_ADDRESS=0x0000000000000000000000000000000000000000

# =============================================================================
# API Keys
# =============================================================================

# BscScan API for transaction verification
BSCSCAN_API_KEY=

# =============================================================================
# Railway-Specific Variables (Auto-injected in production)
# =============================================================================

# Railway PostgreSQL (auto-injected)
# DATABASE_URL will be set automatically by Railway

# Railway Redis (auto-injected)
# REDIS_URL will be set automatically by Railway

# Railway Internal URL (for frontend proxy)
# RAILWAY_PUBLIC_DOMAIN=your-app.up.railway.app

# =============================================================================
# Security (Production)
# =============================================================================

# JWT Secret for API authentication (generate a strong random string)
JWT_SECRET=

# Rate limiting (requests per minute)
RATE_LIMIT_MAX=100
